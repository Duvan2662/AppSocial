<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".auth.LoginActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/colorPrimario"
        android:src="@drawable/amigoslogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-43dp"
        android:id="@+id/numeroLayout"

        android:layout_marginHorizontal="36dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="7dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Introduce tu numero celular" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/numeroUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="numero"
                    android:inputType="number"
                    android:drawablePadding="12dp"
                    android:drawableLeft="@drawable/celular"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/enviarCodigo"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:text="Enviar Codigo"
                android:layout_height="40dp"
                />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/codigoLayout"
        android:visibility="gone"
        android:layout_marginTop="-43dp"
        android:layout_marginHorizontal="36dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="7dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Introduce tu codigo" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/usuarioCodigo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Codigo"
                    android:inputType="number"

                    android:drawablePadding="12dp"
                    android:drawableLeft="@drawable/candado"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/verificarCodigo"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:text="Verificar Codigo"
                android:layout_height="40dp"
                />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
